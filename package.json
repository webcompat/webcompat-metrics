{
  "name": "webcompat-metrics-client",
  "version": "0.1.0",
  "description": "An application to power metrics for webcompat.com",
  "license": "MPL-2.0",
  "private": true,
  "author": "webcompat",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webcompat/webcompat-metrics-client.git"
  },
  "bugs": {
    "url": "https://github.com/webcompat/webcompat-metrics-client/issues"
  },
  "homepage": "https://github.com/webcompat/webcompat-metrics-client#readme",
  "engines": {
    "node": ">=8.7.0"
  },
  "scripts": {
    "build": "npm run clean && webpack --env.NODE_ENV=production --progress --colors",
    "clean": "shx rm -rf build && shx mkdir build",
    "heroku-postbuild": "npm run build",
    "lint": "npm run lint:JS && npm run lint:CSS",
    "lint:JS": "eslint ./server ./webpack.config.js ./src ./scripts",
    "lint:CSS": "stylelint \"./src/**/*.css\" ",
    "fix": "npm run lint:fix:JS && npm run lint:fix:CSS",
    "lint:fix:JS": "npm run lint:JS -- --fix",
    "lint:fix:CSS": "npm run lint:CSS -- --fix",
    "start": "node server",
    "start:dev": "webpack-dev-server --env.NODE_ENV=development --progress --colors",
    "test": "npm run lint && npm run test:jest",
    "test:jest": "jest --runInBand --detectOpenHandles --coverage --forceExit",
    "test:watch": "npm run test:jest -- --watch"
  },
  "dependencies": {
    "chart.js": "^2.7.3",
    "dayjs": "^1.8.11",
    "express": "^4.16.4",
    "prop-types": "^15.7.2",
    "react": "^16.8.5",
    "react-chartjs-2": "^2.7.4",
    "react-dom": "^16.8.5",
    "react-router-dom": "^5.0.0",
    "react-svg-inline": "^2.1.1",
    "simple-json-fetch": "^1.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/plugin-transform-spread": "^7.2.2",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^8.0.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "copy-webpack-plugin": "^5.0.2",
    "css-loader": "^1.0.0",
    "dotenv-webpack": "^1.7.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "eslint": "^5.15.3",
    "eslint-config-i-am-meticulous": "^11.0.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "favicons-webpack-plugin": "0.0.9",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "imports-loader": "^0.8.0",
    "jest": "^24.5.0",
    "jest-fetch-mock": "^2.1.1",
    "postcss": "^7.0.14",
    "postcss-browser-reporter": "^0.6.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-reporter": "^6.0.1",
    "prettier": "^1.16.4",
    "raw-loader": "^3.0.0",
    "react-test-renderer": "^16.8.5",
    "shx": "^0.3.2",
    "sinon": "^7.3.0",
    "style-loader": "^0.23.1",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.2.1"
  },
  "babel": {
    "env": {
      "development": {
        "presets": [
          "@babel/preset-react",
          "@babel/preset-env"
        ],
        "plugins": [
          "@babel/plugin-transform-spread"
        ]
      },
      "test": {
        "presets": [
          "@babel/preset-react",
          "@babel/preset-env"
        ],
        "plugins": [
          "@babel/plugin-transform-spread"
        ]
      },
      "production": {
        "presets": [
          "@babel/preset-react",
          "@babel/preset-env"
        ],
        "plugins": [
          [
            "babel-plugin-transform-react-remove-prop-types",
            {
              "mode": "wrap"
            }
          ],
          "@babel/plugin-transform-spread"
        ]
      }
    }
  },
  "jest": {
    "verbose": true,
    "notify": true,
    "coverageThreshold": {
      "global": {
        "statements": 70,
        "branches": 65,
        "functions": 70,
        "lines": 70
      }
    },
    "moduleNameMapper": {
      "\\.(svg)$": "<rootDir>/scripts/__mocks__/fileMock.js",
      "\\.(css)$": "identity-obj-proxy"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/public/",
      "<rootDir>/scripts/"
    ],
    "setupFiles": [
      "<rootDir>/scripts/test-setup.js"
    ],
    "testURL": "http://localhost:3001/?from=2018-04-25&to=2018-05-25"
  }
}
